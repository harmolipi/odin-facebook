<!DOCTYPE html>
<html>
  <head>
    <title>OdinFacebook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar">
      <div class="navbar-start">
        <div class="navbar-item">
          <%= link_to 'Social Network', root_path, class: 'button is-ghost' %>
        </div>
      </div>
      <div class="navbar-end">
        <% if user_signed_in? %>
          <div class="navbar-item">
            <div class="control">
              <%= link_to friend_requests_path do %>
                <div class="tags has-addons">
                  <span class="tag">Friend requests:</span>
                  <% if current_user.received_friend_requests.empty? %>
                    <span class="tag is-danger">0</span>
                  <% else %>
                    <span class="tag is-primary"><%= current_user.received_friend_requests.count %></span>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
          <div class="navbar-item">
            <%= link_to current_user.name, current_user, class: 'button' %>
          </div>
          <div class="navbar-item">
            <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'button' %>
          </div>
        <% else %>
          <div class="navbar-item">
            <%= link_to 'Sign in', new_user_session_path, class: 'button' %>
          </div>
        <% end %>
      </div>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
