<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2">Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { wrapper: false, label_html: { class: 'label' }, input_html: { class: 'input' }, hint_html: { class: 'help' }, full_error_html: { class: 'help is-danger' } }) do |f| %>
          <div class="field">
            <div class="control">
              <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :remember_me, input_html: { class: 'mr-2' }, label_html: { class: ''}, wrapper: false, as: :boolean if devise_mapping.rememberable? %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <div class="form-actions">
                <%= f.button :submit, "Log in", class: 'button is-info' %>
              </div>
            </div>
          </div>
        <% end %>
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</section>
