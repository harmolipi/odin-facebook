<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2">Edit profile</h2>
        <%= simple_form_for @user, defaults: { wrapper: false, label_html: { class: 'label' }, input_html: { class: 'input' }, hint_html: { class: 'help' }, full_error_html: { class: 'help is-danger' } } do |f| %>
          <div class="field">
            <div class="control">
              <%= f.input :biography,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", rows: "10", class: "textarea" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <div class="file has-name is-primary">
                <%= f.label :profile_picture, class: 'file-label' do %> 
                  <%= f.input_field :profile_picture, as: :file, class: 'file-input' %>
                  <span class="file-cta">
                    <span class="file-icon">
                      <%= fa_icon "upload" %>
                    </span>
                    <span class="file-label">
                      Choose a fileâ€¦
                    </span>
                  </span>
                  <span class="file-name" id="uploading-file">
                    mypic.jpg
                  </span>
                <% end %>
              </div>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <div class="form-actions">
                <%= f.button :submit, "Save", class: 'button is-info' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<script>
  const fileInput = document.querySelector('#user_profile_picture');
  fileInput.onchange = () => {
    if (fileInput.files.length > 0) {
      const fileName = document.querySelector('#uploading-file');
      fileName.textContent = fileInput.files[0].name;
    }
  }
</script>
