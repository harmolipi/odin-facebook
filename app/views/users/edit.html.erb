<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2">Edit profile</h2>
        <%= simple_form_for @user, defaults: { wrapper: false, label_html: { class: 'label' }, input_html: { class: 'input' }, hint_html: { class: 'help' }, full_error_html: { class: 'help is-danger' } } do |f| %>
          <div class="field">
            <div class="control">
              <%= f.input :biography,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <div class="form-actions">
                <%= f.button :submit, "Save", class: 'button is-info' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
