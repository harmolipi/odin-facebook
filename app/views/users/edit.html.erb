<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <h2 class="title is-2">Edit profile</h2>
          <div class="box">
            <%= simple_form_for @user, defaults: { wrapper: false, label_html: { class: 'label' }, input_html: { class: 'input' }, hint_html: { class: 'help' }, full_error_html: { class: 'help is-danger' } } do |f| %>
              <div class="block">
                <figure class="image container">
                  <%= link_to url_for(@user.profile_picture) do %>
                    <%= image_tag @user.profile_picture.variant(resize_to_limit: [256, 256]) if @user.profile_picture.attached? %>
                  <% end %>
                </figure>
              </div>
              <div class="field">
                <div class="control">
                  <div class="file has-name is-primary">
                    <%= f.label :profile_picture, class: 'file-label' do %> 
                      <%= f.input_field :profile_picture, as: :file, class: 'file-input' %>
                      <span class="file-cta">
                        <span class="file-icon">
                          <%= fa_icon "upload" %>
                        </span>
                        <span class="file-label">
                          Profile picture
                        </span>
                      </span>
                      <span class="file-name" id="uploading-file">
                        mypic.jpg
                      </span>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <%= f.input :biography,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", rows: "10", class: "textarea" } %>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <div class="form-actions">
                    <%= f.button :submit, "Save", class: 'button is-info' %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</section>

<%= javascript_pack_tag 'profile_picture_input_selector', defer: 'defer' %>
